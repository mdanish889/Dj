<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl2">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/img1"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/calculator"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberOneET"
                android:layout_below="@+id/img1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/TX1"
                android:background="@color/Txbcolor"
                android:textColor="@color/Txcolor"
                android:textStyle="bold"
                android:textSize="30sp"
                android:paddingLeft="30dp"
                android:inputType="number"
                android:maxLength="4"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberTwoET"
                android:layout_below="@+id/numberOneET"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="@string/TX2"
                android:background="@color/Txbcolor"
                android:textColor="@color/Txcolor"
                android:textStyle="bold"
                android:textSize="30sp"
                android:paddingLeft="30dp"
                android:inputType="number"
                android:maxLength="4"


                />
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/btn1"
                android:onClick="add1"
                android:layout_below="@id/numberTwoET"
                android:layout_marginLeft="40dp"
                android:text="@string/Add"
                android:textSize="40sp"
                android:paddingLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_style"
                android:textStyle="bold"



                />
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/btn2"
                android:layout_below="@id/numberTwoET"
                android:layout_toRightOf="@+id/btn1"
                android:paddingLeft="60dp"
                android:layout_marginLeft="20dp"
                android:text="@string/mul"
                android:textSize="40sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_style"
                android:textStyle="bold"
                android:onClick="mul1"


                />
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/btn3"
                android:layout_below="@id/btn1"
                android:paddingLeft="60dp"
                android:layout_marginLeft="40dp"
                android:text="@string/sub"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style"
                android:onClick="sub1"

                />
            <Button
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:id="@+id/btn4"
                android:layout_below="@id/btn1"
                android:layout_toRightOf="@+id/btn3"
                android:layout_marginLeft="20dp"
                android:paddingLeft="60dp"
                android:text="@string/div"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_style"
                android:onClick="div1"


                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn4"
                android:id="@+id/result"
                android:layout_marginTop="20dp"
                android:text="@string/result"
                android:paddingLeft="30dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="40sp"
                android:background="@drawable/result"






                />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>